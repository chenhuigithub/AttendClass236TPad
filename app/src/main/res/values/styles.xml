<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="LabelView">
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <style name="ActivityInOutAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:activityOpenEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- 自定义对话框样式的dialog -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 自定义dialog样式 for loading -->
    <style name="DialogForLoading" parent="@android:Theme.Dialog" tools:ignore="ResourceCycle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_for_custom_dialog_for_loading</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="style_custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="@android:windowEnterAnimation">@anim/mylogout_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/mylogout_dialog_exit</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:background">#ffffff</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowNoTitle">false</item>
    </style>

