<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dimen_padding_005">


    <ImageView
        android:id="@+id/iv_file_sign_layout_v_item_for_subsidiary_resource"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/file_n" />

    <LinearLayout
        android:id="@+id/ll_menu_layout_v_item_for_subsidiary_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_padding_005">

        <TextView
            android:id="@+id/tv_preview_layout_v_item_for_subsidiary_resource"
            style="@style/SingBgForRectangle04"
            android:background="@color/red03"
            android:text="预览"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_007" />

        <TextView
            android:id="@+id/tv_download_layout_v_item_for_subsidiary_resource"
            style="@style/SingBgForRectangle04"
            android:layout_marginLeft="@dimen/dimen_padding_005"
            android:background="@color/red03"
            android:text="下载"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_007" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content_layout_v_item_for_subsidiary_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_padding_005"
        android:layout_toLeftOf="@id/ll_menu_layout_v_item_for_subsidiary_resource"
        android:layout_toRightOf="@id/iv_file_sign_layout_v_item_for_subsidiary_resource"
        android:text="沁园春长沙配套资源 学案（1）来源：山东实验中学2020年"
        android:textColor="@color/color_text_content"
        android:textSize="@dimen/dimen_text_007" />


</RelativeLayout>