<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_all_layout_aty_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp" >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/logo02"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_for_white_soild_corners"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="25dp" >

                <LinearLayout
                    android:id="@+id/ll_01_layout_aty_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="50dp"
                        android:layout_height="1.5dp"
                        android:background="@color/color_light_content_bg_base" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="教师登录"
                        android:textColor="@color/color_text_content"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="1.5dp"
                        android:background="@color/color_light_content_bg_base" />
                </LinearLayout>

                <!-- 用户名/手机号/邮箱 -->

                <LinearLayout
                    android:id="@+id/ll_user_name_layout_aty_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_01_layout_aty_login"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/selector_for_grey_soild_corners"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp" >

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:background="@drawable/phone"
                        android:scaleType="fitXY" />

                    <EditText
                        android:id="@+id/edt_user_name_layout_aty_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/selector_for_edt"
                        android:hint="用户名/手机号/邮箱"
                        android:singleLine="true"
                        android:textColor="@color/color_text_content"
                        android:textColorHint="@color/color_text_additional"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 输入密码 -->

                <LinearLayout
                    android:id="@+id/ll_password_layout_aty_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ll_user_name_layout_aty_login"
                    android:layout_alignRight="@id/ll_user_name_layout_aty_login"
                    android:layout_below="@id/ll_user_name_layout_aty_login"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/selector_for_grey_soild_corners"
                    android:clickable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp" >

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:background="@drawable/password"
                        android:scaleType="fitXY" />

                    <EditText
                        android:id="@+id/edt_password_layout_aty_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/selector_for_edt"
                        android:hint="输入密码"
                        android:singleLine="true"
                        android:textColor="@color/color_text_content"
                        android:textColorHint="@color/color_text_additional"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 选择框 -->

                <RelativeLayout
                    android:id="@+id/rl_remember_layout_aty_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_password_layout_aty_login"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/cbox_remember_layout_aty_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_for_cbox"
                        android:button="@null"
                        android:scaleX="0.5"
                        android:scaleY="0.5" />

                    <TextView
                        android:id="@+id/tv_lbl_remember_layout_aty_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/cbox_remember_layout_aty_login"
                        android:text="记住密码"
                        android:textColor="@color/color_text_content"
                        android:textSize="12sp" />
                </RelativeLayout>

                <!-- 登录按钮 -->

                <Button
                    android:id="@+id/tv_login_layout_aty_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ll_user_name_layout_aty_login"
                    android:layout_alignRight="@id/ll_user_name_layout_aty_login"
                    android:layout_below="@id/rl_remember_layout_aty_login"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/selector_for_login_menu"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
        <!-- </LinearLayout> -->

    </LinearLayout>

</FrameLayout>