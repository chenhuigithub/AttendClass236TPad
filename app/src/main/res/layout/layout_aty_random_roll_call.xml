<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey03">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="随机点名"
            android:textColor="@color/color_text_title01"
            android:textSize="12sp" />

        <!-- 关闭 -->

        <LinearLayout
            android:id="@+id/ll_close_layout_aty_random_roll_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/grey03"
            android:clickable="true"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_close_layout_aty_random_roll_call"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/error"
                android:clickable="false"
                android:scaleType="fitXY" />
        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_switch_layout_aty_random_roll_call"
        style="@style/SingBgForRectangle02"
        android:layout_marginLeft="@dimen/dimen_padding_008"
        android:layout_marginTop="@dimen/dimen_padding_008"
        android:background="@color/blue9"
        android:clickable="true"
        android:text="开始"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_text_009" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/dimen_padding_008">

        <TextView
            android:id="@+id/tv_name_layout_aty_random_roll_call"
            style="@style/SingBgForRectangle02"
            android:text="学生姓名"
            android:textColor="@color/color_text_content"
            android:textSize="@dimen/dimen_text_009" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_padding_005">

        <TextView
            android:id="@+id/tv_close_all_layout_aty_random_roll_call"
            style="@style/SingBgForRectangle02"
            android:background="@color/blue9"
            android:clickable="true"
            android:text="关闭全部"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>